{
  "name": "express-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "scripts": {
    "watch-views": "nodemon --watch views -e html,njk -x npm run copy-views",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "copy-js": "mkdir -p assets/js/govuk && cp -R node_modules/govuk-frontend/dist/govuk/govuk-frontend.min.js assets/js/govuk",
    "concat-js": "concat-cli -o assets/js/main-dev.js -f assets/js/govuk/govuk-frontend.min.js",
    "uglify-js": "uglifyjs assets/js/main-dev.js --output assets/js/main.min.js --compress --mangle",
    "copy-views": "cp -R views dist/",
    "compile-sass": "sass --quiet-deps --no-source-map --load-path=node_modules/govuk-frontend/dist --load-path=node_modules/@ministryofjustice/frontend/moj --load-path=. assets/scss/application.scss:./assets/stylesheets/application.css --style compressed",
    "compile-js": "npm run copy-js && npm run concat-js && npm run uglify-js",
    "build": "npm run compile-sass && tsc && npm run copy-views && npm run compile-js",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"npm run watch-node\" \"npm run watch-views\"",
    "test": "jest",
    "lint": "eslint . --cache --max-warnings 0",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist build node_modules stylesheets"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ministryofjustice/frontend": "^2.1.0",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "cypress-multi-reporters": "^1.6.4",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "govuk-frontend": "^5.1.0",
    "http-errors": "^2.0.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "superagent": "^8.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/nunjucks": "^3.2.6",
    "@types/superagent": "^8.1.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "concat-cli": "^4.0.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sass": "^1.69.7",
    "typescript": "^5.3.3",
    "uglify-js": "^3.17.4"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)(test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  }
}
