<div class="form-background govuk-!-padding-top-4 govuk-!-padding-left-4">
    <form action="/search-eform" method="POST">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">
                {{ govukInput({
                    label: {
                        text: 'USN'
                    },
                    classes: "govuk-input--width-10",
                    hint: {
                        text: "Must be no longer than 10 digits"
                    },
                    id: "usn",
                    name: "usn",
                    inputmode: "numeric",
                    spellcheck: false
                }) }}
            </div>
            <div class="govuk-grid-column-one-half">
                {{ govukInput({
                    label: {
                        text: "Supplier account number"
                    },
                    hint: {
                        text: "Must be no longer than 10 digits"
                    },
                    classes: "govuk-input--width-10",
                    id: "supplier-account-number",
                    name: "supplierAccountNumber"
                }) }}
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">
                {{ govukInput({
                    label: {
                        text: "Client name"
                    },
                    classes: "govuk-!-width-full",
                    id: "client-name",
                    name: "clientName"
                }) }}
            </div>
            <div class="govuk-grid-column-one-half">
                {{ govukInput({
                    label: {
                        text: "Client date of birth"
                    },
                    classes: "govuk-input--width-10",
                    id: "client-dob",
                    name: "clientDOB",
                    type: "date"
                }) }}
            </div>
        </div>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-quarter">
                {{ govukInput({
                    label: {
                        text: "Start date"
                    },
                    id: "start-date",
                    name: "startDate",
                    type: "date"
                }) }}
            </div>
            <div class="govuk-grid-column-one-quarter">
                {{ govukInput({
                    label: {
                        text: "End date"
                    },
                    classes: "govuk-!-width-full",
                    id: "end-date",
                    name: "endDate",
                    type: "date"
                }) }}
            </div>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                {{ govukButton({
                    text: 'Search'
                }) }}
            </div>
        </div>
    </form>
</div>