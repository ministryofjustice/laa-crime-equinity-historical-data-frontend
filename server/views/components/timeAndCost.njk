{% macro timeAndCost(field) %}
    {% set timeAndCost = field.value %}
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">{{ field.label }}</dt>
        <dd class="govuk-summary-list__value">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    <span class="govuk-body">{{ timeAndCost.time | formatTime }}</span>
                </div>
                <div class="govuk-grid-column-one-third">
                    <span class="govuk-body">{{ timeAndCost.cost | formatCurrency }}</span>
                </div>
            </div>
        </dd>
    </div>
{% endmacro %}
