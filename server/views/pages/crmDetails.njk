{% extends "../partials/layout.njk" %}
{%- from "../components/navigationBar/macro.njk" import navigationBar -%}

{% set pageTitle = applicationName + " - " + crmType + ": " + title %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <span class="govuk-caption-l govuk-!-padding-bottom-1">eForm: {{ crmType }} | Case number: {{ usn }}</span>
            <h1 class="govuk-heading-l">{{ title }}</h1>
            <div class="govuk-grid-row">
                    {{ navigationBar(navigationItems) }}
                <div class="govuk-grid-column-two-thirds govuk-!-padding-top-4">
                        {% for subsection in section.subsections %}
                            <div class="govuk-form-group govuk-summary-card  govuk-!-margin-bottom-8">
                                <div class="govuk-summary-card__title-wrapper">
                                    <h2 class="govuk-summary-card__title govuk-heading-l">{{ subsection.title }}</h2>
                                </div>
                                <div class="govuk-summary-card__content">
                                <dl class="govuk-summary-list govuk-summary-list--custom">
                                    {% set isFirstItem = true %}
                                    {% for field in subsection.fields %}
                                        {% if field.subHeading %}
                                            <div class="govuk-summary-list__row govuk-!-padding-bottom-2 govuk-!-padding-top-3{% if not isFirstItem %} govuk-!-padding-top-6{% endif %}">
                                                <h3 class="govuk-heading-m">{{ field.subHeading }}</h3>
                                            </div>
                                        {% else %}
                                            <div class="govuk-summary-list__row">
                                                <dt class="govuk-summary-list__key">{{ field.label }}</dt>
                                                <dd class="govuk-summary-list__value">{{ field.value }}</dd>
                                            </div>
                                        {% endif %}
                                        {% set isFirstItem = false %}
                                    {% endfor %}
                                </dl>
                                </div>
                            </div>
                        {% endfor %}
                </div>
            </div>
        </main>
    </div>
{% endblock %}
