{% extends "../partials/layout.njk" %}
{% from "../components/navigationBar.njk" import navigationBar %}
{% from "../components/timeAndCost.njk" import timeAndCost %}
{% from "../components/totalAndCost.njk" import totalAndCost %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <h1 class="govuk-heading-l">{{ title }}</h1>
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    {{ navigationBar(navigationItems) }}
                </div>
                <div class="govuk-grid-column-two-thirds">
                    <div>
                        {% for subsection in section.subsections %}
                        <div class="govuk-section-break govuk-section-break--l govuk-section-break--visible"></div>
                        <div class="govuk-form-group">
                            <h2 class="govuk-heading-l">{{ subsection.title }}</h2>
                            {% for field in subsection.fields %}
                                <div class="govuk-grid-row">
                                    {% if field.subHeading %}
                                        <div class="govuk-grid-column-full">
                                            <h3 class="govuk-heading-m govuk-!-static-padding-top-5 govuk-!-static-margin-bottom-1">{{ field.subHeading }}</h3>
                                        </div>
                                    {% else %}
                                        {% if field.customType === 'timeAndCost' %}
                                            {{ timeAndCost(field) }}
                                        {% elif field.customType === 'totalAndCost' %}
                                            {{ totalAndCost(field) }}
                                        {% else %}
                                            <div class="govuk-grid-column-one-half">
                                                <div class="govuk-form-group">
                                                    <label class="govuk-label"><strong>{{ field.label }}</strong></label>
                                                </div>
                                            </div>
                                            <div class="govuk-grid-column-one-half">
                                                <div class="govuk-form-group">
                                                    <span class="govuk-body">{{ field.value }}</span>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                </div>
                            {% endfor %}
                            {% endfor %}

                        </div>
                    </div>
                </div>

        </main>
    </div>
{% endblock %}
