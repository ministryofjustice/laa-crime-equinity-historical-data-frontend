{% extends "../partials/layout.njk" %}
{% from "../components/navigationBar.njk" import navigationBar %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <h1 class="govuk-heading-l">{{ title }}</h1>
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    {{ navigationBar(navigationItems) }}
                </div>
                <div class="govuk-grid-column-two-thirds">
                    <div>
                        {% for subsection in section.subsections %}
                            <div class="govuk-form-group govuk-!-margin-bottom-9">
                                <h2 class="govuk-heading-l">{{ subsection.title }}</h2>
                                <div class="govuk-summary-list">
                                    {% for field in subsection.fields %}
                                        <div class="govuk-summary-list__row">
                                            {% if field.subHeading %}
                                                <h3 class="govuk-heading-m">{{ field.subHeading }}</h3>
                                            {% else %}
                                                <dt class="govuk-summary-list__key">{{ field.label }}</dt>
                                                <dd class="govuk-summary-list__value">{{ field.value }}</dd>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>

        </main>
    </div>
{% endblock %}
