{% extends "../partials/layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{%- from "govuk/components/table/macro.njk" import govukTable -%}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

  {% block content %}
      <div class="govuk-width-container">
          <main class="govuk-main-wrapper">
              {% if errors| length %}
                {{ govukErrorSummary({
                  titleText: "There is a problem",
                  errorList: errors
                }) }}
              {% endif %}
              <h1 class="govuk-heading-l">Search for a historical eForm</h1>
              <h2 class="govuk-heading-m govuk-!-margin-bottom-1">Search by</h2>
              <span class="govuk-caption-m govuk-!-margin-bottom-4">To find cases, search by USN only or combine filters as Client name, Start date and End date.</span>

              <div class="background-custom govuk-!-padding-top-4 govuk-!-padding-left-4">
                  <form action="/search-eform" method="POST">
                      <div class="govuk-grid-row">
                          <div class="govuk-grid-column-one-half">
                              {{ govukInput({
                                  label: {
                                      text: 'USN'
                                  },
                                  classes: "govuk-input--width-10",
                                  hint: {
                                      text: "Must be no longer than 10 digits"
                                  },
                                  id: "usn",
                                  name: "usn",
                                  inputmode: "numeric",
                                  spellcheck: false
                              }) }}
                          </div>
                          <div class="govuk-grid-column-one-half">
                              {{ govukInput({
                                  label: {
                                      text: "Supplier account number"
                                  },
                                  hint: {
                                      text: "Must be no longer than 10 digits"
                                  },
                                  classes: "govuk-input--width-10",
                                  id: "supplier-account-number",
                                  name: "supplierAccountNumber"
                              }) }}
                          </div>
                      </div>

                      <div class="govuk-grid-row">
                          <div class="govuk-grid-column-one-half">
                              {{ govukInput({
                                  label: {
                                      text: "Client name"
                                  },
                                  classes: "govuk-!-width-full",
                                  id: "client-name",
                                  name: "clientName"
                              }) }}
                          </div>
                          <div class="govuk-grid-column-one-half">
                              {{ govukInput({
                                  label: {
                                      text: "Client date of birth"
                                  },
                                  classes: "govuk-input--width-10",
                                  id: "client-dob",
                                  name: "clientDOB",
                                  type: "date"
                              }) }}
                          </div>
                      </div>

                      <div class="govuk-grid-row">
                          <div class="govuk-grid-column-one-quarter">
                              {{ govukInput({
                                  label: {
                                      text: "Start date"
                                  },
                                  id: "start-date",
                                  name: "startDate",
                                  type: "date"
                              }) }}
                          </div>
                          <div class="govuk-grid-column-one-quarter">
                              {{ govukInput({
                                  label: {
                                      text: "End date"
                                  },
                                  classes: "govuk-!-width-full",
                                  id: "end-date",
                                  name: "endDate",
                                  type: "date"
                              }) }}
                          </div>
                      </div>
                      <div class="govuk-grid-row">
                          <div class="govuk-grid-column-full">
                              <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                              {{ govukButton({
                                  text: 'Search'
                              }) }}
                          </div>
                      </div>
                  </form>
              </div>
          </main>
      </div>

      {% set tableData = {
          head: [
              { text: "Client name / USN" },
              { text: "Type" },
              { text: "Started date" },
              { text: "Submitted" },
              { text: "Provider name" },
              { text: "Status" }
          ],
          rows: []
      } %}

      {% if results | length %}
          {% for item in results %}

              {% set clientName = item.clientName %}
              {% set usn = item.usn %}
              {% set combined = clientName + " " + usn %}
              {% set type = item.type %}
              {% set originatedDate = item.originatedDate %}
              {% set submittedDate = item.submittedDate %}
              {% set providerAccount = item.providerAccount %}
              {% set status = " " %}

              {%- set tableRow = [
                  { text: combined | safe },
                  { text: type | safe },
                  { text: originatedDate | safe },
                  { text: submittedDate | safe },
                  { text: providerAccount | safe },
                  { text: status | safe }
              ] -%}

              {% set list = tableData.rows.push(tableRow) %}

          {% endfor %}
      {% endif %}

      {{ govukTable(tableData) }}

  {% endblock %}
