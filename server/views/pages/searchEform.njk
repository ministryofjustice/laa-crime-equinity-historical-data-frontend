{% extends "../partials/layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}
{% set tableData = {
    head: [
        { text: "Client name / USN" },
        { text: "Type" },
        { text: "Started date" },
        { text: "Submitted" },
        { text: "Provider name" },
        { text: "Status" }
    ],
    rows: []
} %}

  {% block content %}
      <div class="govuk-width-container">
          <main class="govuk-main-wrapper">
              <h1 class="govuk-heading-l">Search for a historical eForm</h1>
              <h2 class="govuk-heading-m govuk-!-margin-bottom-1">Search by</h2>
              <span class="govuk-caption-m govuk-!-margin-bottom-4">To find cases, search by USN only or combine filters as Client name, Start date and End date.</span>

              <div class="background-custom govuk-!-padding-top-4 govuk-!-padding-left-4">
                  <form action="/search-eform" method="POST">
                      <div class="govuk-grid-row">
                          <div class="govuk-grid-column-one-half">
                              {{ govukInput({
                                  label: {
                                      text: 'USN'
                                  },
                                  classes: "govuk-input--width-10",
                                  hint: {
                                      text: "Must be no longer than 10 digits"
                                  },
                                  id: "usn",
                                  name: "usn",
                                  inputmode: "numeric",
                                  spellcheck: false
                              }) }}
                          </div>
                          <div class="govuk-grid-column-one-half">
                              {{ govukInput({
                                  label: {
                                      text: "Supplier account number"
                                  },
                                  hint: {
                                      text: "Must be no longer than 10 digits"
                                  },
                                  classes: "govuk-input--width-10",
                                  id: "supplier-account-number",
                                  name: "supplierAccountNumber"
                              }) }}
                          </div>
                      </div>

                      <div class="govuk-grid-row">
                          <div class="govuk-grid-column-one-half">
                              {{ govukInput({
                                  label: {
                                      text: "Client name"
                                  },
                                  classes: "govuk-!-width-full",
                                  id: "client-name",
                                  name: "clientName"
                              }) }}
                          </div>
                          <div class="govuk-grid-column-one-half">
                              {{ govukInput({
                                  label: {
                                      text: "Client date of birth"
                                  },
                                  classes: "govuk-input--width-10",
                                  id: "client-dob",
                                  name: "clientDOB",
                                  type: "date"
                              }) }}
                          </div>
                      </div>

                      <div class="govuk-grid-row">
                          <div class="govuk-grid-column-one-quarter">
                              {{ govukInput({
                                  label: {
                                      text: "Start date"
                                  },
                                  id: "start-date",
                                  name: "startDate",
                                  type: "date"
                              }) }}
                          </div>
                          <div class="govuk-grid-column-one-quarter">
                              {{ govukInput({
                                  label: {
                                      text: "End date"
                                  },
                                  classes: "govuk-!-width-full",
                                  id: "end-date",
                                  name: "endDate",
                                  type: "date"
                              }) }}
                          </div>
                          <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                          {{ govukButton({
                              text: 'Search'
                          }) }}
                      </div>
                  </form>
              </div>
          </main>
      </div>

      {% if results | length %}
          {% for item in results %}
              <div>
                  <div>
                      Display results
                      {% set clientNameAndUsn = [] %}
                      {% set clientFullName = item.clientName %}
                      {% set clientUsn = item.usn %}
                      <h2>Name: {{ results[0].clientName + ' ' + results[0].usn }}</h2>
                      {{ clientNameAndUsn.push('<li>' + clientFullName + clientUsn + '</li>') }}
                      <h2>Type: {{ results[0].type }}</h2>
                      <h2>Start date: {{ results[0].originatedDate }}</h2>
                      <h2>Submitted: {{ results[0].submittedDate }}</h2>
                      <h2>Provider name: {{ results[0].providerAccount }}</h2>
                      <h2>Status: {{ results[0] }}</h2>
                  </div>
              </div>
          {% endfor %}
      {% endif %}

      {% if not results | length %}
          <div class="govuk-grid-row">
              <div class="govuk-grid-column-full">
                  <h2 class="govuk-heading-m govuk-!-margin-top-5">There is 0 result to display </h2>
              </div>
          </div>
      {% endif %}

  {% endblock %}
