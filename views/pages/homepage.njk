{% extends "partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <h1 class="govuk-heading-l">eForms</h1>
            <h2 class="govuk-heading-m govuk-!-margin-bottom-1">Search by</h2>
            <span class="govuk-caption-m govuk-!-margin-bottom-4">To find cases, search by USN only or combine filters as Client name, Start date and End date.</span>

            <div class="background-custom govuk-!-padding-top-4">

                {% if formError %}
                    {% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
                    {{ govukErrorSummary({
                        titleText: "There is a problem",
                        errorList: [
                            {
                                text: "You must add an USN number",
                                href: "#usn-number-error"
                            }
                        ]
                    }) }}
                {% endif %}
                <div class="govuk-grid-column-full">
                    {%- from "components/form-error/macro.njk" import formError -%}
                    {{ govukInput({
                        label: {
                            text: 'USN'
                        },
                        classes: "govuk-input--width-10",
                        hint: {
                            text: "Must be no longer than 10 digits"
                        },
                        id: "usn-search",
                        name: "usnSearch",
                        inputmode: "numeric",
                        spellcheck: false
                    }) }}
                </div>
                <div class="govuk-grid-column-one-half">
                    {{ govukInput({
                        label: {
                            text: "Client name"
                        },
                        classes: "govuk-!-width-full",
                        id: "client-name",
                        name: "clientName"
                    }) }}
                </div>
                <div class="govuk-grid-column-one-quarter">
                    {{ govukInput({
                        label: {
                            text: "Start date"
                        },
                        id: "start-date",
                        name: "startDate",
                        type: "date"
                    }) }}
                </div>
                <div class="govuk-grid-column-one-quarter">
                    {{ govukInput({
                        label: {
                            text: "End date"
                        },
                        classes: "govuk-!-width-full",
                        id: "end-date",
                        name: "endDate",
                        type: "date"
                    }) }}
                </div>
                {{ govukButton({
                    action: '#',
                    method: 'post',
                    text: 'Search',
                    classes: "govuk-!-margin-left-3"
                }) }}
            </div>
        </main>

    </div>

{% endblock %}